		where import_uid = #{import_uid}
		]]>
	</select> -->
	
	<!-- select festival -->
	<select id="selectFestival" resultMap="resultFestival"
		parameterType="_int">
		<![CDATA[select * from tb_festival where no = #{no}]]>
	</select>
	
	<!-- select member -->
	<select id="selectMember" parameterType="string" resultMap="resultMember">
		<![CDATA[select * from tb_user where user_id = #{user_id}]]>
	</select>
	
	<!-- select ticket option -->
	<select id="selectTicketOption" parameterType="_int" resultMap="resultTicketOption">
		<![CDATA[select * from tb_ticket_option where no = #{no}]]>
	</select>
	
	<!-- 마이페이지 예매내역 조회 -->
	<select id="recommendList" parameterType="_int" resultMap="resultTicket">
		select * from tb_ticket
		where user_id = #{user_id}
	</select>
	
	<!-- 마이페이지 예매내역 날짜 조회 -->
	<select id="myTicketSearch" parameterType="java.util.HashMap" resultMap="resultTicket">
		<![CDATA[
		select * from tb_ticket
		where user_id = #{user_id}
		and ticket_date >= #{start_date} and ticket_date <= #{end_date}
		]]>
	</select>
	
	<!-- 마이페이지 예매내역 날짜 조회 (1,3,6개월) -->
	<select id="myTicketSearchMonth" parameterType="java.util.HashMap" resultMap="resultTicket">
		<![CDATA[
		select * from tb_ticket
		where user_id = #{user_id}
		and ticket_date >= to_char(add_months(sysdate, #{month}), 'YY/MM/DD') and ticket_date <= sysdate
		]]>
	</select>


